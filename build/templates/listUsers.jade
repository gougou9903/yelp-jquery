block content
    table.u-full-width
        thead
            tr
                th Name
                th Reviews
                th Yelping Since
        tbody
        each item in items
            tr
                td
                   b
                    a(href="#", onClick='viewUser("' + item.user_id + '")')
                      = item.name
                td= item.review_count
                td= item.yelping_since